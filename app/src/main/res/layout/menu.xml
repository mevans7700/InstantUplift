<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/menu_layout" android:background="@android:color/white" android:scrollbars="vertical">
    <ImageButton android:id="@+id/adBanner" android:layout_height="wrap_content" android:layout_width="fill_parent"></ImageButton>
<ImageView android:id="@+id/ImageView01" android:src="@drawable/banner" android:scaleType="fitXY" android:adjustViewBounds="true" android:layout_gravity="center_horizontal|center" android:layout_height="wrap_content" android:layout_width="wrap_content" android:maxHeight="400dp" android:maxWidth="300dp" android:paddingTop="3dp"></ImageView>
<!-- this will be viewed if the list has contents -->
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:textSize="@dimen/menu_title_text_size" android:textStyle="bold" android:id="@+id/menu_title" android:textColor="@color/text_title_color" android:paddingBottom="2dp"></TextView>
  <LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content">
  <ListView android:id="@+id/android:list" android:layout_width="fill_parent" android:layout_height="fill_parent" android:cacheColorHint="#00000000" android:divider="@android:color/white"></ListView>
<!-- This will be viewed if the list is empty -->  
  <TextView android:id="@+id/android:empty" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="No Menu Items" android:gravity="center" android:padding="10dp" android:textColor="@android:color/black" /></LinearLayout>
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:textColor="@android:color/black" android:textSize="@dimen/menu_website_size" android:clickable="true" android:autoLink="web" android:id="@+id/menu_website" android:paddingTop="3dp"></TextView>





</LinearLayout>
