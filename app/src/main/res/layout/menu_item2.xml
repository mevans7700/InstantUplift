<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal" 
  android:layout_width="fill_parent" 
  android:layout_height="wrap_content" android:background="@android:color/white" android:layout_marginLeft="4px" android:padding="5dp">
<ImageView android:id="@+id/menu_icon" 
android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4px">
</ImageView>
<LinearLayout android:layout_height="wrap_content" 
android:orientation="vertical" 
android:layout_width="fill_parent">
<TextView android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:id="@+id/menu_text" 
android:layout_weight="1" 
android:gravity="center_vertical"
android:textStyle="bold" 
android:textSize="@dimen/menu_item_text_size" android:text="Test Title" android:textColor="@android:color/black" android:singleLine="true">
</TextView>
<TextView android:layout_height="wrap_content" 
android:layout_width="fill_parent" 
android:id="@+id/menu_text2" 
android:singleLine="true" 
android:layout_weight="1" 
android:gravity="center_vertical"
android:textSize="@dimen/menu_item2_text_size" android:text="(Test Subtitle)" android:textColor="@android:color/black"> 
</TextView>
</LinearLayout>

</LinearLayout>
